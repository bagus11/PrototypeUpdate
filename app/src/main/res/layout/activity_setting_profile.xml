<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_profile"
    android:background="#A7B2BD">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Info"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/title_setting_profile"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="@font/gilorybold"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/header_profile_setting"
            android:layout_below="@+id/title_setting_profile"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:id="@+id/setting_profile_picture"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/account"/>
            <LinearLayout
                android:layout_below="@+id/setting_profile_picture"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilorybold"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="Profile Info"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="18dp"
                        android:textColor="#3F51B5"
                        android:id="@+id/txt_edit"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:id="@+id/form_setting_profile"
            android:layout_below="@id/header_profile_setting">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_name_profile"
                android:fontFamily="@font/giloryregular"/>
            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/giloryregular"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext"
                android:id="@+id/name_profile"
                android:layout_below="@+id/txt_name_profile"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Email Address"
                android:layout_below="@+id/password_profile"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_email_profile"
                android:fontFamily="@font/giloryregular"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/email_profile"
                android:background="@drawable/edittext"
                android:fontFamily="@font/giloryregular"
                android:layout_below="@+id/txt_email_profile"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:layout_below="@+id/name_profile"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_password_profile"
                android:fontFamily="@font/giloryregular"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/password_profile"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/giloryregular"
                android:layout_below="@+id/txt_password_profile"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittext"
                android:inputType="textPassword"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="NIK"
                android:layout_below="@+id/email_profile"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_nik_profile"
                android:fontFamily="@font/giloryregular"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/nik_profile"
                android:background="@drawable/edittext"
                android:fontFamily="@font/giloryregular"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_nik_profile"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:layout_marginRight="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/nik_profile"/>

        </RelativeLayout>



</RelativeLayout>