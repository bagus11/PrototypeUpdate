<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context=".Sign_up">


    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"

        android:layout_height="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_astra"/>
        </LinearLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up "
                android:fontFamily="@font/gilorybold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/description"
                android:layout_height="wrap_content"
                android:text="Enter your credentials and continue"
                android:fontFamily="@font/giloryregular"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_below="@+id/title"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:id="@+id/txt_username"
                android:layout_marginTop="40dp"
                android:text="Username"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/giloryregular"/>


            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_username"
                android:hint="username"
                android:fontFamily="@font/giloryregular"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textColorHint="#D3D1D1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/giloryregular"
                android:text="NIK"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:id="@+id/txt_nik"
                android:layout_below="@+id/login_username"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/signup_nik"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_nik"
                android:fontFamily="@font/giloryregular"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:hint="NIK"
                android:textColor="@color/black"
                android:textColorHint="#D3D1D1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/giloryregular"
                android:text="Email"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:id="@+id/txt_email"
                android:layout_below="@+id/signup_nik"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_email"
                android:fontFamily="@font/giloryregular"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:hint="Email"

                android:textColor="@color/black"
                android:textColorHint="#D3D1D1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/giloryregular"
                android:text="Password"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:id="@+id/txt_password"
                android:layout_below="@+id/signup_email"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_password"
                android:fontFamily="@font/giloryregular"
                android:layout_marginTop="5dp"
                android:textSize="14dp"

                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#D3D1D1" />



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/signup_password"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/gilorybold"
                android:background="@drawable/button"
                android:text="Sign Up"
                android:id="@+id/btn_signup"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/layout_signup"
                android:layout_below="@+id/btn_signup"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Already have an account ?"
                        android:layout_below="@id/btn_login"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/gilorybold"
                        android:textColor="@color/black"
                        android:id="@+id/txt_sign_up"
                        android:gravity="end" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text=" Login"
                        android:fontFamily="@font/gilorybold"
                        android:textColor="#145298"
                        android:id="@+id/txt_login"
                        android:gravity="start" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layout_signup"/>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>




