<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A7B2BD"
    tools:context=".Edit_profile_setting">

    <TextView
        android:id="@+id/title_setting_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gilorybold"
        android:gravity="center_horizontal"
        android:text="Edit Information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/header_profile_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_setting_profile"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/setting_profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/account" />

        <TextView
            android:id="@+id/txt_change_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_profile_picture"
            android:fontFamily="@font/gilorybold"
            android:gravity="center_horizontal"
            android:text="Change Picture"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/form_setting_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_profile_setting"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/white_border">

        <TextView
            android:id="@+id/txt_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/giloryregular"
            android:text="Name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/name_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_name_profile"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/giloryregular" />

        <TextView
            android:id="@+id/txt_email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_profile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/giloryregular"
            android:text="Email Address"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/email_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_email_profile"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:background="@drawable/edittext"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/giloryregular" />

        <TextView
            android:id="@+id/txt_password_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_profile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/giloryregular"
            android:text="Password"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_below="@+id/txt_password_profile"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/giloryregular" />


        <TextView
            android:id="@+id/txt_nik_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_profile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/giloryregular"
            android:text="NIK"
            android:textColor="@color/black" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/nik_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/txt_nik_profile"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/giloryregular" />



    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/form_setting_profile"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Save"
        android:textAllCaps="false"
        android:id="@+id/edit_btn"
        android:fontFamily="@font/gilorybold"
        android:background="@drawable/button"/>


</RelativeLayout>