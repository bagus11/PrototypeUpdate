<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#145298"
    tools:context=".Fragment_cctv"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECHKLIST\nMonitoring Harian"
            android:id="@+id/header_cctv"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilorybold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_border"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilorybold"
                android:text="Berikut kami lakkukan pengecekan rutin terhadap security :" />
            <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/cb_cctv"
                android:fontFamily="@font/giloryregular"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="CCTV dalam kondisi ON" />

            <CheckBox
                android:fontFamily="@font/giloryregular"
                android:id="@+id/cb_monitor"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="@color/black"
                android:text="Layar Monitor ON semua" />

            <CheckBox
                android:id="@+id/cb_record"
                android:textColor="@color/black"
                android:fontFamily="@font/giloryregular"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data record / terekam" />
            <CheckBox
                android:fontFamily="@font/giloryregular"
                android:id="@+id/cb_cek_record"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cek record / rekaman sebelumnya" />

            <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/cb_lainya"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/giloryregular"
                android:layout_height="wrap_content"
                android:text="Lainya(layar buram, gelap,dll)" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/gilorybold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Adapun waktu dan pelaksanaan :"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hari / Tanggal :"
                android:textColor="@color/black"
                android:fontFamily="@font/giloryregular"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext"
                android:inputType="date"
                android:id="@+id/cctv_date"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waktu :"
                android:textColor="@color/black"
                android:fontFamily="@font/giloryregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="time"
                android:background="@drawable/edittext"
                android:textSize="16dp"
                android:layout_marginRight="20dp"
                android:id="@+id/cctv_waktu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/gilorybold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Laporan / keterangan hasil pemeriksaan :"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan:"
                android:textColor="@color/black"
                android:fontFamily="@font/giloryregular"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:background="@drawable/edittext"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:inputType="textLongMessage"
                android:id="@+id/cctv_keterangan"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/giloryregular"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:text="Upload Foto Monitoring :"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:text="Upload"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/gilorybold"
                android:background="@drawable/upload"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="name.jpg"
                android:id="@+id/txt_image"
                android:textColor="@color/white"
                android:fontFamily="@font/giloryregular"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:fontFamily="@font/gilorybold"
            android:text="Catatan :Segala kegiatan terkait sarana CCTV WAJIB didampingi PETUGAS/SECURITY"
            android:gravity="center_horizontal" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/gilorybold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_save"
            android:text="Save"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</ScrollView>